<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">

        <TextView
            android:id="@+id/foster_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/background_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/foster_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ease_back" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/foster_commodity_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foster_rebate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="50%"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/foster_title_name"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="名字"
                    android:textColor="@color/msg_red"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/foster_title_number"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="盒数"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/foster_title_integral"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|right"
                    android:text="元"
                    android:textColor="@color/msg_red"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/foster_img_01"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/foster_img_02"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/foster_img_03"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/foster_img_04"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/foster_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/foster_bom_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foster_txt_01"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#9966CC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foster_txt_02"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#9966CC"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>