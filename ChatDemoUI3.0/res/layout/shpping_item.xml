<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_shopping_check_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/yx_contact_choose_friend_selector" />

            <ImageView
                android:id="@+id/item_shopping_img_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/item_shopping_check_iv"
                android:padding="5dp"
                tools:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/item_shopping_goodsname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textSize="14sp"
                tools:text="好吃不上头的大枣啊" />

            <TextView
                android:id="@+id/item_shopping_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shopping_goodsname_tv"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textColor="#ff5821"
                android:textSize="14sp"
                tools:text="￥79.00" />

            <TextView
                android:id="@+id/item_shopping_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="x1" />

            <LinearLayout
                android:id="@+id/shopping_pay_count_ly"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shopping_pay_add_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/foster_shopping_shape"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/shopping_pay_finalcount_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/foster_shopping_shape"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/shopping_pay_takeof_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/foster_shopping_shape"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_shopping_del_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="删除"
                android:textColor="@color/delete_text_size_seletor"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/tm_common_divide_line_whitebg_width" />
</LinearLayout>