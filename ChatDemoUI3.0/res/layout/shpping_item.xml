<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_shopping_check_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/checkbox_seleter" />

            <ImageView
                android:id="@+id/item_shopping_img_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/item_shopping_check_iv"
                android:padding="5dp"
                tools:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/item_shopping_goodsname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textSize="14sp"
                tools:text="好吃不上头的大枣啊" />

            <TextView
                android:id="@+id/item_shopping_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shopping_goodsname_tv"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textColor="#ff5821"
                android:textSize="14sp"
                tools:text="￥79.00" />

            <TextView
                android:id="@+id/item_shopping_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:textSize="14sp"
                tools:text="x1" />

            <LinearLayout
                android:id="@+id/item_shopping_count_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/item_shopping_img_iv"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量:"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/item_shopping_count_edt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    tools:text="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_shopping_del_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                tools:background="@drawable/item_del_seletor" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_ddd" />
</LinearLayout>