<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    tools:context="tm.ui.mine.PersonCenterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">
        <ImageView
            android:id="@+id/person_center_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ease_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/background_white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/person_center_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="完成"
            android:textSize="15sp"
            android:textColor="@color/background_white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/person_center_head_rv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingLeft="16dp"
                android:background="@color/background_white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#4e4e4e"
                    android:text="头像"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/person_center_head_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/em_empty_photo"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/youxue_common_btn_icon_arrow"/>
            </LinearLayout>
            <View style="@style/tm_common_divide_line_whitebg_width" />
            <TextView
                android:id="@+id/person_center_yanzhi_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="颜值表"
                android:textColor="#4e4e4e"
                android:textSize="16sp"/>
            <GridView
                android:id="@+id/person_center_pics_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:scrollbars="none"
                android:verticalSpacing="5dp">
            </GridView>
            <View style="@style/tm_common_divide_line_whitebg_width" />

            <RelativeLayout
                android:id="@+id/person_center_sign_text_rv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingLeft="15dp"
                android:background="@color/background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#4e4e4e"
                    android:text="个人签名"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/person_center_sign_text_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/person_center_sign_arrow_iv"
                    android:layout_centerVertical="true"
                    android:maxLength="15"
                    android:gravity="right"
                    android:textColor="#4f4f4f"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="个性签名，展示不一样的自己"/>
                <ImageView
                    android:id="@+id/person_center_sign_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youxue_common_btn_icon_arrow"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
