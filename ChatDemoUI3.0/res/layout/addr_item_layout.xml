<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/addr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="7"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/text_all_black"
            android:textSize="16sp"
            tools:text="张若欧" />

        <TextView
            android:id="@+id/addr_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:textColor="@color/text_all_black"
            android:textSize="16sp"
            tools:text="15211455121" />

        <TextView
            android:id="@+id/addr_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addr_name"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            tools:text="陕西省 西安市 雁塔区 丈八沟街道 锦业时代" />

        <View
            style="@style/tm_common_divide_line_whitebg_width"
            android:layout_below="@+id/addr_addr" />

        <LinearLayout
            android:id="@+id/addr_ly_default"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/addr_addr"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addr_btn_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:src="@drawable/yx_contact_choose_friend_selector" />

            <TextView
                android:id="@+id/address_item_default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray_normal"
                android:textSize="16sp"
                tools:text="设为默认" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <Button
                    android:id="@+id/addr_btn_change"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_white_seletor"
                    android:text="修改"
                    android:textColor="@color/common_bottom_bar_normal_bg"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/addr_btn_delete"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/gray_normal"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/address_item_divide"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_ddd" />
</LinearLayout>