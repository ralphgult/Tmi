<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/tm_zhuye_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/tm_shouye_top_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/tm_huihua_title_bar">

            <include layout="@layout/ease_commom_back_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tm_shouye_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/background_white"
                    />

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/shouye_top1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="个人"
                    android:textSize="18sp"
                    android:textColor="#8c8c8c" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shouye_top2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="企业"
                    android:textSize="18sp"
                    android:textColor="#8c8c8c" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shouye_top3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="三农"
                    android:textSize="18sp"
                    android:textColor="#8c8c8c" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#dfdfdf" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#dfdfdf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tm_zhuye_gx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人签名:"
                android:textColor="#9A9A9A"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tm_zhuye_qiyename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称:"
                android:textColor="#9A9A9A"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tm_zhuye_gexing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4E4E4E"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#dfdfdf" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_pic1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pic1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_pic2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_pic3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pic2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_pic4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_pic5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_pic6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/action_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tm_zhuye_qiye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tm_zhuye_qism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9A9A9A"
                android:text="企业说明"
                />
            <TextView
                android:id="@+id/tm_zhuye_qiyeshuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#4E4E4E"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tm_qiye_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#dfdfdf" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#dfdfdf"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/tm_zhuye_geren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9A9A9A"
                android:text="个人动态"
                />
        </LinearLayout>
        <!--个人动态布局 begin-->
        <LinearLayout
            android:id="@+id/tm_geren_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/tm_geren1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/yx_monent_top_head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ease_default_avatar"
                android:scaleType="centerCrop"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/yx_monent_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="#272727"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/yx_monent_top_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#9b9b9b"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--中间评论内容、图片布局 begin-->
        <LinearLayout
            android:id="@+id/tm_geren2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yx_monent_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ellipsize="end"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:gravity="top|left"
                android:textColor="#4e4e4e"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tm_geren3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tm_liulan" />

                <TextView
                    android:id="@+id/yx_monent_content_look"
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yx_monent_bottom_like_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/yx_monent_bottom_like_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tm_zan" />

                <TextView
                    android:id="@+id/yx_monent_bottom_like_number"
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yx_monent_bottom_comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/yx_monent_bottom_comment_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tm_pinglun" />

                <TextView
                    android:id="@+id/yx_monent_bottom_comment_number"
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp"
                    />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <!--店铺商品-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/tm_img_pic1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/tm_zhuye_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shangpin_black"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tm_zhuye_xianjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff5821"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tm_zhuye_yuanjia"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6e6e6e"
                        android:textSize="16sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/tm_img_pic2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/tm_zhuye_jianjie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shangpin_black"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tm_zhuye_xianjia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff5821"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tm_zhuye_yuanjia2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6e6e6e"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <tm.widget.StationaryGridView
            android:id="@+id/tm_dianpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnWidth="80dp"
            android:background="@color/common_bg"
            android:horizontalSpacing="2px"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2px"
            android:visibility="visible"
            >

        </tm.widget.StationaryGridView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tm_geren4"
        android:layout_below="@+id/tm_zhuye_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#dfdfdf" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/tm_botton_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#dfdfdf" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/tm_botton_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        >
        <ImageView
            android:id="@+id/tm_liaotian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/tm_liaotian" />
        <ImageView
            android:id="@+id/tm_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/tm_addfriend" />
    </LinearLayout>


</RelativeLayout>