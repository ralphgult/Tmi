<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="拍卖共享"
            android:textColor="@color/background_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/auction_detail_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ease_back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/action_border"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/auction_detail_imgs"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/action_border"
                        android:src="@drawable/goods" />
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/auction_img_01"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/goods"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/auction_img_02"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/goods"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/auction_img_03"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/goods"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/auction_img_04"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/goods"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/auction_img_05"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/goods"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/auction_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="年货：粽子一盒，内含10个肉松粽子"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/auction_detail_number"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:text="商品编号：1000001"
                        android:textColor="#7b7b7b"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_contact"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:drawableRight="@drawable/tmi_relation"
                        android:text="联系我们:18792681661"
                        android:textColor="#7b7b7b"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/auction_detail_price"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="当前价:60元"
                            android:textColor="@color/msg_red"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/auction_detail_unit_price"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="#5a0aaa"
                            android:gravity="left|center_vertical"
                            android:textSize="14sp"
                            android:text="加价单位:10元"
                            android:textColor="@color/background_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/auction_detail_original_price"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="直购价:120元"
                            android:textColor="#7b7b7b"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/auction_detail_price_number"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="加价次数:2次"
                            android:textColor="@color/msg_red"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/auction_detail_time"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/time"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:text="剩余时间：0天9时6分2秒"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_bid"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="#5a0aaa"
                        android:gravity="center"
                        android:text="手动出价"
                        android:textColor="@color/background_white" />
                </LinearLayout>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:background="#bebebe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="拍品详情"
                android:textColor="#b15bff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/auction_detail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:singleLine="false"
                android:text="        拍品详情:开始加圣诞节疯狂送的借款方手机登陆福建省的咖啡机，含税单价圣诞节副书记打飞机.\n        是积分兰琨说京东方可接受的，算了代价分类科束带结发上点击防守打法。可接受的净空法师打飞机了斯柯达，华盛顿看见回复可接受的后方可束带结发金黄色的。\n        很快就收到货付款收到回复可接受的后方可收到回复。了快速点击法律手段减肥了坚实的福建省登录开发就是登录，含税单价俯拾地芥分手的距离束带结发接收到"
                android:textColor="#b15bff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>