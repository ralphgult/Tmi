<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tmi_notice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context="tm.ui.tmi.TmiNoticeActivity">
    <RelativeLayout
        android:id="@+id/tmi_notice_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">
        <ImageView
            android:id="@+id/tmi_notice_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/ease_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="T觅资讯"
            android:textColor="@color/background_white"
            android:textSize="20sp"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/tmi_notice_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tmi_notice_title"/>
    <TextView
        android:id="@+id/tmi_notice_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="暂无数据"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:visibility="gone"/>
</RelativeLayout>
