<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    tools:context="tm.ui.tmi.OrderManagerAcitivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">

        <ImageView
            android:id="@+id/order_manager_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ease_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单管理"
            android:textColor="@color/background_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_manager_doing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="进行中"
            android:textColor="#a161fb"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_manager_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="已完成"
            android:textColor="#4e4e4e"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/order_manager_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="已关闭"
            android:textColor="#4e4e4e"
            android:textSize="14sp" />
    </LinearLayout>
<View style="@style/tm_common_divide_line_whitebg_width"/>
    <LinearLayout
        android:id="@+id/order_manager_kind"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/gray_ddd"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/order_manager_tosend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/order_manager_tosend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="#a161fb"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_manager_tosend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="待发货"
                android:textColor="#a161fb"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/tm_common_divide_line_gray_height" />

        <LinearLayout
            android:id="@+id/order_manager_topay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/order_manager_topay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_manager_topay_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="待付款"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/tm_common_divide_line_gray_height" />

        <LinearLayout
            android:id="@+id/order_manager_sended"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/order_manager_sended_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_manager_sended_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="已发货"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/tm_common_divide_line_gray_height" />

        <LinearLayout
            android:id="@+id/order_manager_toback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/order_manager_toback_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_manager_toback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="退款中"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/order_manager_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"
        android:scrollbars="none" />
</LinearLayout>
