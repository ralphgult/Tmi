<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goods_item_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            tools:background="@drawable/default_pic" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/goods_item_head"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/order_item_header"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/common_bottom_bar_normal_bg"
                android:textSize="14sp"
                tools:text="冰粽礼盒，60g*8" />
            <TextView
                android:id="@+id/goods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_item_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/order_item_header"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="#ff5821"
                tools:text="￥79.0" />
            <TextView
                android:id="@+id/goods_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_item_price"
                android:layout_toRightOf="@+id/order_item_header"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp"
                tools:text="销量：112  库存：34" />
            <TextView
                android:id="@+id/goods_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_item_price"
                android:layout_toRightOf="@+id/order_item_header"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:textColor="@color/btn_gray_pressed"
                android:textSize="14sp"
                tools:text="添加时间：2016.7.12" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/goods_item_choice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@drawable/checkbox_seleter"/>
    </RelativeLayout>
    <View style="@style/tm_common_divide_line_whitebg_width"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goods_item_see"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textColor="@color/common_bottom_bar_normal_bg"
            android:gravity="center"
            android:textSize="18sp"
            android:text="预览"/>
    </LinearLayout>
    <View style="@style/tm_common_divide_line_whitebg_width"/>
</LinearLayout>