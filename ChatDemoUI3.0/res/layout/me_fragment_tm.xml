<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/background_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/tm_my_bg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fgt_mine_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/background_white"
            android:padding="15dp"
            android:text="设置"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/fgt_mine_head_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:background="@color/background_white"
            android:src="@drawable/head_default"/>
        <TextView
            android:id="@+id/fgt_mine_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fgt_mine_head_iv"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#4e4e4e"
            android:text="无用户名"/>
        <TextView
            android:id="@+id/fgt_mine_singh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fgt_mine_name_tv"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:maxWidth="300dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="个性签名，展示不一样的自己"
            android:textSize="16sp"
            android:textColor="#9a9a9a"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_person_center_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_1"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="个人中心"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <View style="@style/tm_common_divide_line_whitebg_width" />

            <TextView
                android:id="@+id/mine_comp_center_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_2"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="企业中心"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <View style="@style/tm_common_divide_line_whitebg_width" />

            <TextView
                android:id="@+id/mine_farmer_center_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_3"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="三农中心"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mine_my_order_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_4"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="我的订单"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <View style="@style/tm_common_divide_line_whitebg_width" />

            <TextView
                android:id="@+id/mine_my_shopping_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_5"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="我的购物车"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <View style="@style/tm_common_divide_line_whitebg_width" />
            <TextView
                android:id="@+id/mine_my_address_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_3"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="我的地址"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />

            <View style="@style/tm_common_divide_line_whitebg_width" />
            <TextView
                android:id="@+id/mine_my_message_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@color/background_white"
                android:drawableLeft="@drawable/tm_my_6"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/youxue_common_btn_icon_arrow"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:text="我的消息"
                android:textColor="@color/yx_context_function_color"
                android:textSize="16sp" />
            <View style="@style/tm_common_divide_line_whitebg_width" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>