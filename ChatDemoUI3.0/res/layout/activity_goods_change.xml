    <RelativeLayout
        android:id="@+id/goods_detil_change_name_rv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/goods_detil_change_imgs_ly"
        android:background="@color/background_white"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/goods_detil_change_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="商品名称"
            android:textColor="#4e4e4e"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/goods_detil_change_name_text_tv"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/goods_detil_change_name_arrow"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="未设置"
            android:maxLines="1"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            tools:text="多少克录" />

        <ImageView
