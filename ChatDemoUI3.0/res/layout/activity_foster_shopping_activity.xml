<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tm_huihua_title_bar">

        <TextView
            android:id="@+id/foster_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购买商品"
            android:textColor="@color/background_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/foster_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ease_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/foster_comm_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|left"
        android:text="商品名称："
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foster_comm_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|left"
            android:text="商品数量："
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/foster_comm_add_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/foster_shopping_shape"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foster_comm_sum_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/foster_shopping_shape"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foster_comm_delete_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/foster_shopping_shape"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/foster_comm_money_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="商品金额："
        android:textSize="18dp" />

    <TextView
        android:id="@+id/foster_comm_sure_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/foster_shopping_shape"
        android:gravity="center"
        android:text="确认购买"
        android:textSize="18dp" />
</LinearLayout>