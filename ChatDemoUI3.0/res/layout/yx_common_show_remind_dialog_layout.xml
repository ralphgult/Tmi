<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yx_common_radius_5dp_color_white_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yx_common_remid_dialog_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#4d4d4d"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commom_remid_dialog_submit_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/yx_common_show_dialog_btn_bg_l_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#7F7F7F"
            android:textSize="14sp"
            android:textStyle="bold" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d5d5d5" />

        <TextView
            android:id="@+id/commom_remid_dialog_submit2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/yx_common_show_dialog_btn_bg_r_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#7F7F7F"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>