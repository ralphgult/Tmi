<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tm_bg"
    android:orientation="vertical" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dip"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="28dp"
             >

            <ImageView
                android:id="@+id/iv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:src="@drawable/tm_name" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:textColorHint="#ceb6f3"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:maxLength="11"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/tm_aty_clear_account_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/username"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:src="@drawable/tm_icon_clear"
                />
        </RelativeLayout>
        <View style="@style/tm_common_divide_line_whitebg_width"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/rl_username"
            />
        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_username"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:src="@drawable/tm_password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#ceb6f3"
                android:inputType="textPassword"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:maxLength="10"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/tm_aty_clear_password_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/password"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:src="@drawable/tm_icon_clear"
               />

        </RelativeLayout>
        <View style="@style/tm_common_divide_line_whitebg_width"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/rl_password"
            />
        <LinearLayout
            android:id="@+id/tm_login_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tm_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/em_button_login_bg"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tm_login_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tm_zhuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="7dp"
                android:paddingTop="3dp"
                android:gravity="center"
                android:text="新用户注册"
                android:textSize="16sp"
                android:textColor="#ceb6f3"
                />
            <TextView
                android:id="@+id/tm_wangjimima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="3dp"
                android:text="忘记密码"
                android:textSize="16sp"
                android:textColor="#ceb6f3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_ly"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:layout_marginTop="65dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/login_wechat_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:src="@drawable/tm_button_weixin_bg"
                />
            <ImageView
                android:id="@+id/login_webo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:src="@drawable/tm_button_weibo_bg"
                />
            <ImageView
                android:id="@+id/login_qq_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:src="@drawable/tm_button_qq_bg"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>